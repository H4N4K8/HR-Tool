@model IEnumerable<HR_Tool.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
</head>

<h1>Categories</h1>

<p>
    <a class="btn2" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="background-color:#03B28B; font-size:1.2em;">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th style="background-color:#03B28B;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="btnCol">
                    <a class="btn" asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a>
                    <a class="btn" asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
